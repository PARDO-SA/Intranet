@model Intranet.Models.Login.Usuario
@{
    ViewBag.Title = "logueo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="loginPAR_container">
        <div class="loginPAR_box">
            <div class="loginPAR_col12header">
                <div class="loginPAR_outter">
                    <img src="~/Content/img/par_4.jpg" class="image-circle" />
                </div>
            </div>
            <div class="loginPAR_col12contenido">
                <div class="loginPAR_msg">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div align="center" class="loginPAR_control">
                    <div class="loginPAR_label">
                        Usuario
                    </div>
                    @Html.EditorFor(model => model.CodUsr, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.CodUsr, "", new { @class = "text-danger" })
                </div>

                <div align="center" class="loginPAR_control">
                    <div class="loginPAR_label">
                        Contraseña
                    </div>
                    @Html.EditorFor(model => model.PwdUsr, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PwdUsr, "", new { @class = "text-danger" })
                </div>

                <div align="center">
                    <input type="submit" value="Iniciar Sesión" class="loginPAR_button" />
                </div>
            </div>
        </div>
    </div>
}